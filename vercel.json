{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "functions": {
        "backend/server.js": {
            "includeFiles": "backend/data/*.json"
        }
    }
}