{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!api|static|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "backend/data/*.json"
        }
    }
}