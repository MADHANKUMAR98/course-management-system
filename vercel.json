{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "api/index.js"
        },
        {
            "source": "/((?!api|static|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "backend/data/*.json"
        }
    }
}